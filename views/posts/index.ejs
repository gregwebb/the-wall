
<body>
    <div class="container">
        <% if(user){ %>
            <%- include('../partials/header') %>
            <div class="postbox">
                <form id="new-form" action="/posts" method="POST">
                    <textarea rows="5" id="index-post" type="text" name="content" placeholder="Tell us how you really feel."></textarea>
                    <input id="submit" type="submit" value="Add Post">
                </form> 
            </div>
        <% } else{ %>  
            <%- include('../partials/splash') %>
        <% } %>
        <% posts.forEach(function(p) { %>
            <div class="post">
                <div class="post-attributes">
                    Posted By: <a href ="#"><%= p.author.username %></a> at <%= p.createdAt %>
                </div>
                <div class="post-content">
                    <%= p.content %>
                </div>
                <div class="post-links">
                    <a href ="/posts/<%= p._id %>" class="postlinks"><%= p.comments.length %> Comments</a>    
                    <a href ="/posts/<%= p._id %>" class="postlinks">View Post</a>    
                </div>
            </div>
            <br>
        <% }); %>
    </div>
</body>