
<body>
    <div class="container">
        <% if(user){ %>
            <%- include('../partials/header') %>
            <% } else{ %>  
                <%- include('../partials/splash') %>
            <% } %>
            <div class="content-container">
            <div class="postbox">
                <form id="new-form" action="/posts" method="POST">
                    <textarea rows="8" id="index-post" type="text" name="content" placeholder="Tell us how you really feel..."></textarea>
                    <input id="submit" type="submit" value="Add Post">
                </form> 
            </div>

        <% posts.forEach(function(p) { %>
            <div class="post">
                <div class="post-attributes">
                    Posted By: <a href ="#"><%= p.author.username %></a> <%= p.createdAt.toDateString() %>
                </div>
                <div class="post-content">
               
                    <%= p.content %>
                </div>
               
                <div class="post-links-container">  
                    <div class="like-container">
                        <form action="/posts/<%= p._id %>/like" method="POST">
                            <input type="hidden" name="liked" value="<%p._id %>">
                            <input type="submit" class="like-button" value="ðŸ‘ <%=p.likes.length%>">
                          </form> 
                    </div>
                    <div class="post-links">
                    <a href ="/posts/<%= p._id %>" class="postlinks">View Post (<%= p.comments.length %> Comments)</a>    
                    <button class="action-button-comment" onclick="showForm()">Reply</button>
                </div>
            </div>
            <div id="show-form">
                <form id="new-form" action="/posts/<%= p._id %>/" method="POST">
                    <textarea rows="5" id="index-post" type="text" name="content" placeholder="Reply to post.. (400 char limit)" maxlength="400"></textarea>
                    <input id="submit" type="submit" value="Add Comment">
                  </form> 
              </div>
            </div>
            <br>
        <% }); %>
        <div class="pages">
        <% if (pages > 0) { %>
            <ul class="pages-list">
                <% if (page == 1) { %>
                <% } else { %>
                    <li><a href="/posts/page/<%= +page - 1 %>">Previous</a></li>
                <% } %>
                <% if (page == pages) { %>
                <% } else { %>
                    <li><a href="/posts/page/<%= +page + 1 %>">Next</a></li>
                <% } %>
            </ul>
        </div>
        <% } %>
    </div>
</div>
</body>
