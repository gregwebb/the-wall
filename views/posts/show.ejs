<% if(user){ %>
  <%- include('../partials/header') %>
  <% } else{ %>  
    <%- include('../partials/splash') %>
<% } %>
<body>
  <div class="container">
    <div class="post">
      <div class="post-attributes">
        Posted By: <a href ="#"><%= post.author.username %></a> at <%= post.createdAt %>
      </div>
      <div class="post-content-post">
        <%= post.content %>
      </div>
      <% if(typeof user === "undefined"){ %>
      <% } else if (post.author._id.equals(user._id)) { %>
        <div class="post-buttons">
            <button class="action-button" onclick="showForm()">Edit Post</button>
          <form action="/posts/<%= post._id %>?_method=DELETE" method="POST">
            <input type="submit" class="action-button" value="Delete Post">
          </form>  

        </div>

      <% } %> 
    </div>
    
    <div id="show-form">
      <form action="/posts/<%= post._id %>?_method=PUT" method="POST">
          <textarea rows="5" id="index-post" type="text" name="content" maxlength="400"><%= post.content %></textarea>
  <input id="submit" type="submit" value="Update Post">
</form> 
  </div>
    <div class="comment-view">
      <h4>Comments: (<%= post.comments.length %>) </h4>
      <% post.comments.forEach(function(c) { %>
        <div class="comment">
          <%= c.content %>
          <% if(typeof user === "undefined"){ %>

            <% } else if (c.author._id.equals(user._id)) { %>
              <div class="edit-delete-comment">
                <form action="/comments/<%= c._id %>?_method=DELETE" method="POST">
                  <input type="submit" class="action-button-comment" value="Delete">
                </form>  
              </div>
              <% } %> 
            <div class="comment-details">
            
     Posted By: <a href ="#" ><%= c.author.username  %></a> at <%=c.createdAt.toDateString()%>
    </div>
        </div>
        <br/>
      <% }); %>
    </div>
    <% if(typeof user === "undefined"){ %>
      <% } else { %>
    <div class="commentbox">
      <form id="new-form" action="/posts/<%= post._id %>/" method="POST">
        <textarea rows="5" id="index-post" type="text" name="content" placeholder="Reply to post.. (400 char limit)" maxlength="400"></textarea>
        <input id="submit" type="submit" value="Add Comment">
      </form> 
    </div>
    <% } %> 
  </div>
</body>


